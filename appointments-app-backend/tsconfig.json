{
    "compilerOptions": {
        "target": "es2020",
        "strict": true,
        "preserveConstEnums": true,
        "noEmit": false,
        "sourceMap": false,
        "module": "es2015",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": "src",
        "outDir": "dist",
        "paths": {
            "@/*": ["*"]
        }
    },
    "include": ["./src/**/*.ts", "src/command/lambda/patient-appointments.ts", "src/tests/unit/test-handler.test.ts"],
    "exclude": ["node_modules/**/*"]
}
